hierarchy : Script ()
hierarchy = do
  --- Setup ---
  operator      <- allocatePartyWithHint "Operator" $ PartyIdHint "Operator"
  cashProvider  <- allocatePartyWithHint "CashProvider" $ PartyIdHint "CashProvider"
  bondRegistrar <- allocatePartyWithHint "BondRegistrar" $ PartyIdHint "BondRegistrar"
  bank1  <- allocatePartyWithHint "Bank1" $ PartyIdHint "Bank1"
  bank2  <- allocatePartyWithHint "Bank2" $ PartyIdHint "Bank2"
  bank3  <- allocatePartyWithHint "Bank3" $ PartyIdHint "Bank3"
  investor11 <- allocatePartyWithHint "Investor11" $ PartyIdHint "Investor11"
  investor21 <- allocatePartyWithHint "Investor21" $ PartyIdHint "Investor21"
  investor31 <- allocatePartyWithHint "Investor31" $ PartyIdHint "Investor31"
  issuer <- allocatePartyWithHint "Issuer" $ PartyIdHint "Issuer"
  public <- allocatePartyWithHint "Public" $ PartyIdHint "Public"

  submit operator do createCmd Operator.Role with operator; observers = empty

  createCustodianRole operator cashProvider
  createCustodianRole operator bondRegistrar
  createCustodianRole operator bank1
  createCustodianRole operator bank2
  createCustodianRole operator bank3

  -- 1st level
  (_, bank1CashAccount) <- createCustodyService operator cashProvider bank1
  (_, bank2CashAccount) <- createCustodyService operator cashProvider bank2
  (_, bank3CashAccount) <- createCustodyService operator cashProvider bank3
  (_, issuerCashAccount) <- createCustodyService operator cashProvider issuer

  (_, bank1BondAccount) <- createCustodyService operator bondRegistrar bank1
  (_, bank2BondAccount) <- createCustodyService operator bondRegistrar bank2
  (_, bank3BondAccount) <- createCustodyService operator bondRegistrar bank3
  (_, issuerBondAccount) <- createCustodyService operator bondRegistrar issuer

  -- 2nd level
  (_, bank1OwnAccount) <- createCustodyService operator bank1 bank1
  (_, bank2OwnAccount) <- createCustodyService operator bank2 bank2
  (_, bank3OwnAccount) <- createCustodyService operator bank3 bank3
  (_, investor1CashAccount) <- createCustodyService operator bank1 investor11
  (_, investor2CashAccount) <- createCustodyService operator bank2 investor21
  (_, investor3CashAccount) <- createCustodyService operator cashProvider investor31
  (_, investor3BondAccount) <- createCustodyService operator bank3 investor31
  let
    investor1BondAccount = investor1CashAccount
    investor2BondAccount = investor2CashAccount
  createIssuanceService operator bondRegistrar issuer

  (_, usd)  <- originate operator cashProvider cashProvider public "USD" Zero
  (_, bond) <- originate operator bondRegistrar issuer public "BOND1" $ bond usd.assetId 100_000_000.0 0.02275 (unrollDates 2021 2023 [Jan,Jul] 15)

  investorDeposit1Cid <- deposit operator cashProvider bank1 public 100_000_000.0 "USD"
  investorDeposit2Cid <- deposit operator cashProvider bank2 public 100_000_000.0 "USD"
  investorDeposit3Cid <- deposit operator cashProvider bank3 public 100_000_000.0 "USD"
  investorDeposit1Cid <- deposit operator bank1 investor11 public 100_000_000.0 "USD"
  investorDeposit2Cid <- deposit operator bank2 investor21 public 100_000_000.0 "USD"
  investorDeposit3Cid <- deposit operator cashProvider investor31 public 100_000_000.0 "USD"

  bondDepositCid <- issue operator bondRegistrar issuer "BondIssuance" 100_000_000.0 bond.assetId
  Some bondDeposit <- queryContractId @AssetDeposit issuer bondDepositCid

  --- Syndication ---
  createBookRunnerRole operator bank1

  createDistributorRole operator issuer
  createDistributorRole operator bank1
  createDistributorRole operator bank2
  createDistributorRole operator bank3

  createStructuringService operator bank1 issuer

  createBookBuildingService operator bank1 issuer
  createBookBuildingService operator bank2 issuer
  createBookBuildingService operator bank3 issuer
  createBiddingService operator bank1 investor11
  createBiddingService operator bank2 investor21
  createBiddingService operator bank3 investor31

  let
    dealId = "DEAL1"
    priceId = Id with signatories = fromList [cashProvider]; label = "USD"; version = 0
    tranche = Asset with id = (Id with signatories = fromList [bondRegistrar, issuer]; label = "TRANCHE1"; version = 0); quantity = 100_000_000.0
  dealCid <- createDeal operator bank1 issuer dealId priceId
  dealCid <- addTranche operator bank1 issuer dealId tranche

  [bookBuildingRequest1Cid] <- requestBookBuilding operator bank1 issuer dealCid bank1CashAccount bank1BondAccount issuerCashAccount issuerBondAccount
  [bookBuildingRequest2Cid] <- requestBookBuilding operator bank2 issuer dealCid bank2CashAccount bank2BondAccount issuerCashAccount issuerBondAccount
  [bookBuildingRequest3Cid] <- requestBookBuilding operator bank3 issuer dealCid bank3CashAccount bank3BondAccount issuerCashAccount issuerBondAccount

  bid1Cid <- bid operator bank1 investor11 bookBuildingRequest1Cid bank1OwnAccount bank1OwnAccount 20_000_000.0 0.995
  bid2Cid <- bid operator bank2 investor21 bookBuildingRequest2Cid bank2OwnAccount bank2OwnAccount 30_000_000.0 0.997
  bid3Cid <- bid operator bank3 investor31 bookBuildingRequest3Cid bank3CashAccount bank3OwnAccount 50_000_000.0 0.999

  let offeredPrice = 0.998
  allocation1Cid <- allocate issuer bid1Cid 20_000_000.0 offeredPrice
  allocation2Cid <- allocate issuer bid2Cid 30_000_000.0 offeredPrice
  allocation3Cid <- allocate issuer bid3Cid 50_000_000.0 offeredPrice

  -- investorDeposit1Cid <- head <$> submit investor11 do exerciseCmd investorDeposit1Cid AssetDeposit_Split with quantities = [ quantity1 * offeredPrice ]
  -- investorDeposit2Cid <- head <$> submit investor21 do exerciseCmd investorDeposit2Cid AssetDeposit_Split with quantities = [ quantity2 * offeredPrice ]
  -- investorDeposit3Cid <- head <$> submit investor31 do exerciseCmd investorDeposit3Cid AssetDeposit_Split with quantities = [ quantity3 * offeredPrice ]

  confirmation1Cid <- confirm investor11 allocation1Cid investor1CashAccount investor1BondAccount
  confirmation2Cid <- confirm investor21 allocation2Cid investor2CashAccount investor2BondAccount
  confirmation3Cid <- confirm investor31 allocation3Cid investor3CashAccount investor3BondAccount

  let
    bookBuildingRequestCids = [ bookBuildingRequest1Cid, bookBuildingRequest2Cid, bookBuildingRequest3Cid ]
    confirmationCids = [ confirmation1Cid, confirmation2Cid, confirmation3Cid ]
    price = offeredPrice
  siCids <- submit issuer do exerciseCmd dealCid Structuring.InstructConfirmations with ..
  sisOpt <- mapA (queryContractId operator) siCids
  let sis = catOptionals sisOpt
  forA_ sis debug
  -- settle issuer si1Cid
  -- settle issuer si2Cid
  -- settle issuer si3Cid

  pure ()
